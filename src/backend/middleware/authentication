//Function that filters request    
exports.isAuthenticated = async(req, res,next)=> {
    let authHeader = (req.headers.authorization || '');
    if (authHeader.startsWith("Bearer ")) {
        token = authHeader.substring(7, authHeader.length);
    } else {
        return res.send({ message: 'No Auth' });
    }
    console.log("Test desde el backend, llega en el header " + JSON.stringify(authHeader));    


    /*
    if(req.cookies.jwt){
        try {
            const deco=await util.promisify(jwt.verify)(req.cookies.jwt,process.env.JWT_SECRET)
            pool.query('Select userId,username from User WHERE username=?',[deco.username], async function(err, result, fields) {
                if (err) {
                    console.log("error:"+err)
                    var response = JSON.stringify(response_conform);
                    console.log(response);                                
