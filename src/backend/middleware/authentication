const express = require('express');
const util = require('util')

var pool = require('../mysql');
var routerAuthenticate = express.Router();
const jwt = require('jsonwebtoken');
const bcrypt = require("bcrypt");
require('dotenv').config({ encoding: 'latin1' })
//Function that filters request    
exports.isAuthenticated = async(req, res,next)=> {
    if(req.cookies.jwt){
        try {
            const deco=await util.promisify(jwt.verify)(req.cookies.jwt,process.env.JWT_SECRET)
            pool.query('Select userId,username from User WHERE username=?',[deco.username], async function(err, result, fields) {
                if (err) {
                    console.log("error:"+err)
